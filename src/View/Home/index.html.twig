
{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} Accueil {{user.lastname}}
{% endblock %}

{% block content %}

    <!--Display messages when user enters email address-->
    <div class="box-msg">
        {% if success != NULL %}
            <div class="success">
                <h1>{{ success }}</h1>
            </div>
        {% elseif errors != NULL %}
            <div class="alert">
                <h1>{{ errors }}</h1>
            </div>
            {% elseif current_user is not defined %}
            <div class="success">
                <h1>{{ session_destroy }}</h1>
            </div>
        {% endif %}
        
    </div>

    <!--Post Header Text-->
    <div class="post-head-text">
        <p>Vous etes passionné par la photographie, vous aimez voir de belles photos !</p>
        <p>Vous pourrez sur ce site exposer vos plus belles photographies</p>
        
    </div>

  

   

    
    

    <!--Newsletter + buttom-->
    <div class="newsletter">
        <p>Inscrivez-vous à notre Newsletter</p>

        <div class="box-newsletter">
            <form method="POST" action="/home/index">
                <input id="bn-email" type="email" placeholder="E-mail" name="email">
                <input id="bn-ok" type="submit" name="submit" value="OK">
            </form>
        </div>
    </div>


{% endblock %}

